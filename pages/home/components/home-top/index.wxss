.home-top {
  height: 13vh;
  background-color: #34a7fc;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.avatar {
  height: 7vh;
  width: 7vh;
  background-color: #666;
  border-radius: 50%;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: cover;
  background-repeat: no-repeat;
}

.search {
  display: flex;
  position: relative;
  margin-left: -5vw;
}

.search-icon {
  height: 3vh;
  width: 3vh;  
  position: absolute;
  top: 50%;
  margin-top: -1.5vh;
  margin-left: 1.5vw;
}

.search-input {
  height: 6vh;
  width: 65vw;
  padding-left: 8vw;
  color: #000;
  background-color: #268ed9;
  border-radius: 3vh;
}