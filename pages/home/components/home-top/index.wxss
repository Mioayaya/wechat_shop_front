.home-top {
  height: 23vh;
  background-color: rgba(0, 0, 0, 0);
  display: flex;
  align-items:flex-end;
  justify-content: space-around;  
  position: relative;  
}

.home-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  background-size: cover;  
}

.home-top-avatar,.home-top-search {
  z-index: 1;
  margin-bottom: 3vh;
}

.home-top-avatar {
  height: 7vh;
  width: 7vh;
  background-color: #666;
  border-radius: 50%;
}

.home-top-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: cover;
  background-repeat: no-repeat;
}

.home-top-search {
  display: flex;
  position: relative;
  margin-left: -5vw;
}

.search-icon {
  height: 3vh;
  width: 3vh;  
  position: absolute;
  top: 50%;
  margin-top: -1.5vh;
  margin-left: 1.5vw;
}

.search-input {
  height: 6vh;
  width: 65vw;
  padding-left: 8vw;
  color: #000;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 3vh;
}