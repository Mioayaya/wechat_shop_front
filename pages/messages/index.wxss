.title {
  display: block;  
  height: 10vh;
  background-color: #fcecef;
  text-align: center;  
  line-height: 10vh;
  padding-top: 2vh;
  font-size: larger; 
  position: fixed;
  left: 0;
  right: 0;
  top: 0;  
}

.container {
  display: flex;
  flex-direction: column;
}

.contain {
  display: block;
  height: 90vh;
  margin-top: 13vh;
  padding: 0 2vw;
}

.card {
  display: flex;
  height: 7vh;
  align-items: center;
  margin-bottom: 2vw;
}

.card .img {  
  border-radius: 50%;
  width: 7vh;
  height: 7vh;
}

.card .msg {
  flex: 1;
  margin-left: 2vw;
  color: #888;
}