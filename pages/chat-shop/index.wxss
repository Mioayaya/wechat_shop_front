.title {
  display: block;  
  height: 10vh;
  background-color: #fcecef;
  text-align: center;  
  line-height: 10vh;
  padding-top: 2vh;
  font-size: larger; 
  position: fixed;
  left: 0;
  right: 0;
  top: 0;  
}

.chat {
  display: flex;
  flex-direction: column;
}

.contain {
  display: flex;
  flex-direction: column;
  height: 88vh;
  margin-top: 12vh;
  padding: 0 2vw;
  padding-top: 2vw;
}

.list {
  height: 79vh;  
  display: flex;
  flex-direction: column;
}

.send {
  display: flex;
  height: 9vh;
  align-items: center;
}

.contain-input {
  background-color: rgba(0, 0,0, 0.1);
  border-radius: 2vh;
  height: 4vh;
  flex: 4;
  padding: 0 3vw;
}

.send-message {
  flex: 1;
  height: 4vh;  
  background-color: #93cff0;
  text-align: center;
  line-height: 4vh;
  border-radius: 2vh;
  margin-left: 2vw;  
}

.card {
  display: flex;
  height: 7vh;
  align-items: center;
  margin-bottom: 2vw;
}

.card .img {  
  border-radius: 50%;
  width: 7vh;
  height: 7vh;
}

.card .msg {
  flex: 1;
  margin-left: 2vw;
}