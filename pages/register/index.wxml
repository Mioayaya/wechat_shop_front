<view class="register">
  <back-home backUrl="/pages/home/index"/>
  <form catchsubmit="formSubmit">
    <view class="register-title">注册</view>
    <view class="register-card">
      <input bindinput="bindKeyInputName" class="register-email" type="text" placeholder="昵称"/>
      <input bindinput="bindKeyInputEmail" class="register-email" type="text" placeholder="邮箱"/>      
      <input bindinput="bindKeyInputPassword" class="register-password" password type="text" placeholder="密码"/>
      <input bindinput="bindKeyInputRePassword" class="register-password" password type="text" placeholder="重复密码"/>
    </view>
    <view class="register-buttons">
      <button formType="submit">注册</button>      
      <button bindtap="bindindTapToRegister">返回登录</button>
    </view>
  </form>
</view>