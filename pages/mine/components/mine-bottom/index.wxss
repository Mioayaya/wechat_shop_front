.mine-bottom {
  height: 68vh;
  background-color: #f0f0f0;
  margin-top: -3vh;
  border-top-right-radius: 3vh;
  border-top-left-radius: 3vh;  
}

.collect {
  display: flex;
  justify-content: space-around;
  height: 10vh;
  align-items: center;
}

.collect-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-order {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 95vw;
  height: 15vh;  
  margin: auto;
  border-radius: 2vh;
}

.order-title {
  display: flex;
  justify-content: space-between;
  padding: 0 3vw;
}

.order-title .title {
  color: #000;
  font-weight: 600;
  font-size: large;
}

.order-title .all {
  color: #9a9a9a;
}

.my-order-card {
  display: flex;
  justify-content: space-around;
}

.order-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  height: 4vh;
}