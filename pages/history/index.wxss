.title {
  display: block;  
  height: 10vh;
  background-color: #fcecef;
  text-align: center;  
  line-height: 10vh;
  padding-top: 2vh;
  font-size: larger; 
  position: fixed;
  left: 0;
  right: 0;
  top: 0;  
}

.history {
  display: flex;
  flex-direction: column;
}

.history-contain {
  height: 90vh;
  margin-top: 13vh;
  padding: 0 2vw;
}

.card {
  display: flex;
  height: 15vh;
  margin-bottom: 1vh;
  padding-bottom: 1vh;
  border-bottom: 1rpx solid #eee;
}

.card .left {
  flex: 3;    
  border-radius: 2vw;
}

.card .left image {
  width: 100%;
  height: 100%;
  border-radius: 2vw;
}

.card .right {
  flex: 4;
  margin-left: 2vw;
}

.card .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  font-size: larger;
}

.txt {
  display: flex;
  flex-direction: column;
  color: #bbbcc0;
}