.card {
  display: flex;
  height: 15vh;
  margin-bottom: 1vh;
  padding-bottom: 1vh;
  border-bottom: 1rpx solid #eee;
}

.card .left {
  flex: 3;    
  border-radius: 2vw;
}

.card .left image {
  width: 100%;
  height: 100%;
  border-radius: 2vw;
}

.card .right {
  flex: 4;
  margin-left: 2vw;
}

.card .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  font-size: larger;
}

.txt {
  display: flex;
  flex-direction: column;
  color: #bbbcc0;
}

.txt .space{
  display: flex;
  justify-content: space-between;
}

.state {
  display: inline-block;
  margin-right: 5vw;
  color: orange;  
}

.fahuo {
  margin-left: -15vw;
  color: black;
}

.shouhuo {
  color: #d38b8b;
}

.done {
  color: green;
}